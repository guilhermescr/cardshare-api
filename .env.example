# Server configuration
PORT=3000
API_BASE_URL=http://localhost:3000

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/cardsdb

# Cloudinary configuration for image uploads
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# JWT secret key (use a long, random string in production)
JWT_SECRET=your_very_secure_random_string_here

# JWT token expiration (e.g., 1h, 7d)
JWT_EXPIRES_IN=1h

# Debug mode: auto-login with default user
DEBUG_LOGIN=true
DEBUG_USERNAME=debuguser_01
DEBUG_EMAIL=debug@domain.com
DEBUG_PASSWORD=debugpassword123

# Email (SMTP) configuration for sending emails such as confirmations and password resets
SMTP_EMAIL=yourname@domain.com
SMTP_PASSWORD=your_16_digit_app_password